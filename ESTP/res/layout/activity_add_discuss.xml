<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?dominantHue" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/include_toolbar_txt_menu" />

        <LinearLayout
            android:id="@+id/scroll_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.accumulation.lib.ui.scrollable.ObservableScrollView
                android:id="@+id/input_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/location_layout"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/location_dsn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:textColor="?attr/fontPrimary"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <com.accumulation.app.view.EmoticonsEditText
                        android:id="@+id/broadcast_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:gravity="top"
                        android:hint="  快来输入内容吧"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:minHeight="150dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:textColor="?attr/fontPrimary"
                        android:textColorHint="?attr/fontDescription"
                        android:textSize="16sp" />

                    <com.accumulation.app.view.GridViewForScrollView
                        android:id="@+id/pictures"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:columnWidth="100dp"
                        android:gravity="center"
                        android:horizontalSpacing="5dp"
                        android:numColumns="3"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="5dp"
                        android:visibility="visible" />
                </LinearLayout>
            </com.accumulation.lib.ui.scrollable.ObservableScrollView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/emotion_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <include
            android:id="@+id/footer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/include_broadcast_mult_input"
            android:visibility="visible" />
    </LinearLayout>

</RelativeLayout>