<com.accumulation.lib.ui.header.TouchCallbackLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/dominantHue" >

    <LinearLayout
        android:id="@+id/pager_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:orientation="vertical" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topic_header_height"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/card_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:background="@color/transparent"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/column3_user_05" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="10dp" >

                    <TextView
                        android:id="@+id/topic_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="#话题名称 #"
                        android:textColor="?attr/fontPrimary"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/topic_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="支持人：XXX"
                        android:textColor="?attr/fontDescription"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/topic_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分类：医患"
                        android:textColor="?attr/fontDescription"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tabbar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topic_tab_height"
        android:layout_marginTop="@dimen/topic_header_height"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topbar_container"
        style="@style/ActionBar"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/topbar"
            style="@style/ActionBar"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="visible" >

            <RelativeLayout
                android:id="@+id/back"
                android:layout_width="@dimen/topbar_btn_width"
                android:layout_height="match_parent"
                android:background="@drawable/btn_selector"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_show_pic_back_icon" />
            </RelativeLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="@dimen/base_action_bar_height"
                android:layout_weight="1"
                android:alpha="0"
                android:gravity="center"
                android:text=""
                android:textColor="#fff"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/menu"
                android:layout_width="@dimen/topbar_btn_width"
                android:layout_height="match_parent"
                android:background="@drawable/btn_selector"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/flagView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_bar_web_more_normal"
                    android:tag="image" />

                <ProgressBar
                    android:id="@+id/loadingProgress"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:indeterminateBehavior="repeat"
                    android:indeterminateDrawable="@drawable/data_loading_drawable"
                    android:indeterminateOnly="true"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:divider="?attr/horizontalDivider"
        android:orientation="horizontal"
        android:showDividers="middle" >

        <Button
            android:id="@+id/topic_follow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/itemSelector"
            android:gravity="center"
            android:text="加关注"
            android:textColor="?attr/fontPrimary"
            android:textSize="16sp" />

        <Button
            android:id="@+id/topic_broadcast"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/itemSelector"
            android:gravity="center"
            android:text="发动态"
            android:textColor="?attr/fontPrimary"
            android:textSize="16sp" />

        <Button
            android:id="@+id/topic_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/itemSelector"
            android:gravity="center"
            android:text="聊天室"
            android:textColor="?attr/fontPrimary"
            android:textSize="16sp" />
    </LinearLayout>

</com.accumulation.lib.ui.header.TouchCallbackLayout>